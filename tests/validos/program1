module Canvas {
    Template: {
        rightCenter:[a],
        center:[b],
        leftCenter:[c]
    }

    ~ Esto es un comentario :) ~

    Style: css{
        .a{
            color: red;
        }
        .b{
            color: blue;
        }
        .c{
            color: green;
        }
    }css
    
    Script:js{
        console.log("soy el canvas!"); 
    }js
}

module a {
    Template:{
        children:"soy a"
    }
    Style: css{
        .a{
            font-size: 20px;
            width: 100px;
            height: 100px;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: black;
        }
    }css
}

module b{
    Template:{
        children:"soy b"
    }
    Script:js{
        console.log("soy b"); 
    }js
    
}

module c {
    Template:{
        children:"soy c"
    }
}